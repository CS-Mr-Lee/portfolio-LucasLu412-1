package ICS4U1;

/**
 * Name: Lucus Lu, Harry Liu
 * Date: Mar 11, 2022
 * Description: The original class for Laptop
 */

public class Laptop {

	/* Attributes */
	private String brand;
	private String colour;
	private double price;
	private double size;
	private double weight;
	private int storage;
	private int battery;
	private int keyboardSize;
	private boolean isLocked;
	
	/* Constructor */
	public Laptop (String brand, String colour, double price, double size, double weight, int storage, int battery, int keyboardSize, boolean isLocked) {
		this.brand = brand;
		this.colour = colour;
		this.price = price;
		this.size = size;
		this.weight = weight;
		this.storage = storage;
		this.battery = battery;
		this.keyboardSize = keyboardSize;
		this.isLocked = isLocked;
	}
	
	/* Accessors and Mutators */
	/**
	 * return the brand attributes
	 * @return brand  String  the brand of device
	 */
	public String getBrand() {
		return brand;
	}
	
	/**
	 * return colour attributes
	 * @return colour  String  the colour of device
	 */
	public String getColour() {
		return colour;
	}
	
	/**
	 * return price attributes
	 * @return price  double  the price of device
	 */
	public double getPrice() {
		return price;
	}
	
	/**
	 * return size attributes
	 * @return size  double  the size of device
	 */
	public double getSize() {
		return size;
	}
	
	/**
	 * return weight attributes
	 * @return weight  double  the weight of device
	 */
	public double getWeight() {
		return weight;
	}
	
	/**
	 * return storage attribute
	 * @return storage  int  the storage of device
	 */
	public int getStorage() {
		return storage;
	}
	
	/**
	 * return the battery attributes
	 * @return battery  int  the battery of device
	 */
	public int getBattery() {
		return battery;
	}
	
	public int getKeyboardSize() {
		return keyboardSize;
	}
	
	/**
	 * return the isLocked attributes
	 * @return isLocked  boolean  the lock status of device 
	 */
	public boolean getIsLocked() {
		return isLocked;
	}
	
	
	public void setKeyboardSize(int newKeyboardSize) {
		keyboardSize = newKeyboardSize;
	}
	
	/* Other methods */
	/**
	 * unlock the device
	 */
	public void unlock() {
		isLocked = false;
	}
	
	/**
	 * lock the device
	 */
	public void lock() {
		isLocked = true;
	}
	
	/**
	 * charge the device and each minutes boost 1%
	 * @param time int the time of calling
	 */
	public void charge(int time) {	//time in min
		battery = Math.min(100, battery + time*1);
	}
	
	public void game(int time) {
		if (isLocked) {
			System.out.println("Unlock laptop first");
			return;
		}
		
		if (battery == 0) {
			System.out.println("Charge laptop first");
			return;
		}
		
		if (keyboardSize <= 50) {
			System.out.println("Get a larger keyboard first");
			return;
		}
		
		battery = Math.max(0, battery - time*2);
	}
	
	/**
	 * if the device has enough battery
	 * @return yes/no if over 75, return yes, if lower 75, return no
	 */
	public String hasEnoughBattery() {
		return battery >= 75 ? "Yes" : "No";
	}
	
	/**
	 * return attributes values
	 * @return String attributes values
	 */
	public String toString() {
		return "\nBrand: " + brand + "\nColour: " + colour + "\nPrice: " + price + "\nSize: " + size + "\nWeight "
				+ weight + "\nStorage: " + storage + "\nBattery: " + battery + "%\nIs Locked: "
				+ (isLocked ? "Yes" : "No") + "\nis On: " + "\nKeyboard Size: " + keyboardSize;
	}
}
